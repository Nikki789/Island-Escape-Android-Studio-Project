<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.OpenContainerResult"
    android:background="@drawable/box">

    <TextView
        android:id="@+id/text1"
        android:layout_width="222dp"
        android:layout_height="99dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="333dp"
        android:background="#F2F3F4"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="In the meantime you have started building a shelter."
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="84dp"
        android:background="#9FFFFFFF"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You opened the container and found some clothes. They could have been useful if they weren't wet, so you put them on the nearest bamboo tree for them to dry."
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="118dp"
        android:layout_height="60dp"
        android:layout_below="@id/text"
        android:layout_centerInParent="true"
        android:layout_marginTop="136dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Next"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>