<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.StayInTheCave"
    android:background="@drawable/caveinside">

    <TextView
        android:id="@+id/text"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="While you were sleeping you heard a hissing sound. It was too late when you found out that it was a venomous snake and you got bitten. Game over"
        android:textColor="#000000"
        android:textSize="20sp"
        android:background="#9FFFFFFF"
        android:layout_width="425dp"
        android:layout_height="115dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_marginTop="136dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Start from the beginning"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>