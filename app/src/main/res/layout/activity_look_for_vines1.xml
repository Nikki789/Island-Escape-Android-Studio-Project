<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.LookForVines1"
    android:background="@drawable/bear">

    <TextView
        android:id="@+id/text1"
        android:layout_width="223dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="218dp"
        android:background="#9FFFFFFF"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Did you:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="You couldn't find anything, but you saw a bear. The bear noticed you."
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="#000000"
        android:layout_width="425dp"
        android:layout_height="115dp"
        android:layout_marginTop="84dp"
        android:layout_centerHorizontal="true"
        android:background="#9FFFFFFF"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_marginTop="93dp"
        android:background="#9FFFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Play dead."
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_marginTop="154dp"
        android:background="#9FFFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Run for your life."
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>