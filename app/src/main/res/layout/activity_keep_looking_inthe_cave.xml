<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.KeepLookingIntheCave"
    android:background="@drawable/caveinside">

    <TextView
        android:id="@+id/text"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You were surprised to find that the sound comes from bats. However, the cave looks unwelcoming and something seems wrong."
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#9FFFFFFF"
        android:layout_width="425dp"
        android:layout_height="115dp"
        android:layout_marginTop="84dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="252dp"
        android:layout_height="69dp"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Stay in the cave for the night."
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Give it up and look for shelter"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>