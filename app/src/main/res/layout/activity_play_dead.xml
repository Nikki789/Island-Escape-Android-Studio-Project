<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.PlayDead"
    android:background="@drawable/bear2">

    <TextView
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="The bear seemed more interested in what it was doing than you. You waited a little unttil it stopped paying you attention and you escaped."
        android:layout_width="425dp"
        android:layout_height="115dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#9FFFFFFF"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="395dp"
        android:background="#F2F3F4"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Keep searching?"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="491dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Yes"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="560dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="No"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>