<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.StartBuildingShelterResult"
    android:background="@drawable/wood">


    <TextView
        android:id="@id/text"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You have decided to start building a shelter."
        android:layout_width="425dp"
        android:layout_height="115dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#9FFFFFFF"
        android:layout_marginTop="84dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="425dp"
        android:layout_height="115dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="267dp"
        android:background="#F2F3F4"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You saw some pieces of wood left by the storm but you would need something to tie them up with to make the shelter."
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="405dp"
        android:background="#F2F3F4"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="275dp"
        android:layout_height="75dp"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Look for vines or anything that can be useful."
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="329dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Try opening the container to see if there is something useful in there."
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>