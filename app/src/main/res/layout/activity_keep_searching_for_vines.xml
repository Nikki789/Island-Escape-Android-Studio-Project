<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.KeepSearchingForVines"
    android:background="@drawable/sharks">

    <TextView
        android:id="@+id/text1"
        android:layout_width="223dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="244dp"
        android:background="#F2F3F4"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Will you try to take it? "
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="84dp"
        android:background="#9FFFFFFF"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You notice that there is seaweed near the shore that you can use  either for food or for the making of the shelter. You caught a glimpse of something that looked like a shark's fin. "
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_marginTop="136dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Yes"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerInParent="true"
        android:layout_marginTop="201dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="No"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>