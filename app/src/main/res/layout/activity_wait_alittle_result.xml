<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.WaitALittleResult"
    android:background="@drawable/fruit">


    <TextView
        android:id="@+id/text1"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You feel your skin burning and throw the fruit away."
        android:textSize="20sp"
        android:textColor="#000000"
        android:background="#9FFFFFFF"
        android:layout_width="425dp"
        android:layout_height="115dp"
        android:layout_marginTop="84dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="261dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="316dp"
        android:background="#F2F3F4"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Keep looking for food?"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="196dp"
        android:layout_height="76dp"
        android:layout_below="@id/button"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="464dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Yes"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="196dp"
        android:layout_height="70dp"
        android:layout_below="@id/button"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="560dp"
        android:background="#F2F3F4"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="No - make a campfire"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>