<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.up899244.GoToCaveResult1"
    android:background="@drawable/caveinside">


    <TextView
        android:id="@+id/text1"
        android:layout_width="131dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="228dp"
        android:background="#9FFFFFFF"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="You hear sounds coming from the cave which you don't recognize."
        android:textSize="20sp"
        android:layout_width="425dp"
        android:layout_height="115dp"
        android:layout_marginTop="84dp"
        android:layout_centerHorizontal="true"
        android:background="#9FFFFFFF"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="272dp"
        android:layout_height="80dp"
        android:layout_below="@id/text"
        android:layout_centerVertical="true"
        android:layout_marginTop="96dp"
        android:background="#9FFFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Risk it and check out what are the sounds."
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerInParent="true"
        android:layout_marginTop="187dp"
        android:background="#9FFFFFFF"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Give it up and look for shelter"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>